# Configuration API Claude
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Modèle Claude à utiliser
CLAUDE_MODEL=claude-3-haiku-20240307

# Modèle Claude Haiku 3.5 pour le script de régénération
CLAUDE_MODEL_HAIKU=claude-3-5-haiku-20241022

# Limites de tokens
MAX_TOKENS_INPUT=200
MAX_TOKENS_OUTPUT=100

# (Optionnel) Tier API Anthropic (1, 2, 3, 4, ou 5)
# Utilisé pour optimiser le throttling de count_tokens()
ANTHROPIC_TIER=1

# ============================================
# Configuration API REST Donkey Quoter
# ============================================

# Activer le mode API backend (Streamlit appelle l'API REST)
# false = mode direct (services locaux)
# true = mode API (appels HTTP vers le backend)
USE_API_BACKEND=false

# URL de base de l'API REST (pour mode API)
API_BASE_URL=http://localhost:8001

# Clé API pour l'authentification (génération de haïkus)
DONKEY_QUOTER_API_KEY=your-api-key-here

# (Optionnel) Clés API supplémentaires (séparées par virgules)
# DONKEY_QUOTER_API_KEYS=key1,key2,key3

# (Optionnel) Activer le mode développement (ajoute une clé de test)
# DONKEY_QUOTER_DEV_MODE=true
